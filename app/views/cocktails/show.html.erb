<%= link_to "Go back", cocktails_path, class: 'navbar-wagon-item navbar-wagon-button btn' %>

<h1><%= @cocktail.name %></h1>
<h3>Ingredients :</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> : <%= dose.description %>
      <%= link_to dose_path(dose), method: 'delete', data: {confirm: "Are you sure?"} do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %>


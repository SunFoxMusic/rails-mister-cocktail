<div class="home-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%)>
  <div class="banner-content">
    <h1>Madame B's cocktails</h1>
    <p>The one and only place to drink the best cocktails</p>
    <%= link_to "Create my cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">

    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <%= render 'shared/card', cocktail: cocktail %>
        </div>
      <% end %>
    </div>

</div>

